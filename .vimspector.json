{
    "adapters": {
        "python-remote": {
            "port": 5678,
            "host":"localhost",
            "launch": {
                "remote": {
                    "runCommand": [
                        "python", "-m", "debugpy",
                        "--listen", "${host}:${port}",
                        "--wait-for-client",
                        "%CMD%"
                    ]
                }
            }
        }
    },

    "configurations": {
        "my-Python-remote-launch": {
            "adapter": "python-remote",
            "filetypes": [ "python" ],
            "default": true,
            "remote-request": "launch",
            "remote-cmdLine": [
                // This is the value of %CMD% in the adapter
                "${RemoteRoot}/${fileBasename}", "*${args}"
            ],
            "configuration": {
                "request": "launch"}

        }
    }
}
